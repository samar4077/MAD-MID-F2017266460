<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@mipmap/note1"
            android:layout_marginTop="@dimen/_11sdp"
            android:layout_marginLeft="@dimen/_11sdp">

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creat List"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_11sdp"
            android:layout_marginTop="@dimen/_26sdp"
            android:textSize="@dimen/_15sdp">

        </TextView>

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@mipmap/close"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_130sdp"></ImageView>

    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Name"
        android:layout_marginLeft="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_11sdp">

    </EditText>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Item"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_14sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp">

        </TextView>

        <ImageView
            android:id="@+id/showdialog"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_baseline_add_24"
            android:layout_marginLeft="@dimen/_205sdp"
            android:layout_marginTop="@dimen/_7sdp"></ImageView>

    </LinearLayout>

    <View
        android:layout_width="@dimen/_300sdp"
        android:layout_height="2dp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/lightblack"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/imagelayout">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/imgliner"
    android:orientation="vertical">
<ImageView
    android:layout_width="@dimen/_180sdp"
    android:layout_height="@dimen/_180sdp"
    android:src="@mipmap/empty_note"
    android:layout_marginLeft="@dimen/_65sdp"
    android:layout_marginTop="@dimen/_11sdp">

</ImageView>
</LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_11sdp"
            android:layout_marginRight="@dimen/_160sdp">

        </TextView>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        </CheckBox>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        </CheckBox>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        </CheckBox>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_11sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Date"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_11sdp"
            android:layout_marginRight="@dimen/_110sdp">

        </TextView>

        <TextView

            android:id="@+id/viewdate"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="April 30,2021"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp">

        </TextView>

        <ImageView
            android:id="@+id/setdate"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/calendar"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_5sdp"></ImageView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_11sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Time"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_11sdp"
            android:layout_marginRight="@dimen/_130sdp">

        </TextView>

        <TextView
            android:id="@+id/timeview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7;12 PM"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp">

        </TextView>

        <ImageView
            android:id="@+id/timeset"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@mipmap/clock"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_5sdp"></ImageView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_11sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_11sdp"
            android:layout_marginRight="@dimen/_190sdp">

        </TextView>



        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@mipmap/repeat"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_5sdp"></ImageView>

    </LinearLayout>


<Button
    android:layout_width="@dimen/_200sdp"
    android:layout_height="wrap_content"
    android:text="Button"
    android:layout_marginLeft="@dimen/_60sdp"
    android:layout_marginTop="@dimen/_30sdp"
    android:background="@drawable/buttonbck"></Button>

</LinearLayout>